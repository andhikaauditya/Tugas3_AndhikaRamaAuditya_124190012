<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">


    <TextView
        android:id="@+id/tv_judul"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="Forum Jual-Beli Part Vespa"
        android:textSize="20dp"
        android:layout_marginLeft="83dp"
        android:layout_marginTop="20pt"></TextView>

    <ImageView
        android:id="@+id/iv_gambar"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginLeft="110dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/vespa"></ImageView>

    <Button
        android:id="@+id/btn_tanpadata"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginLeft="50dp"
        android:text="PINDAH TANPA DATA"></Button>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/et_pemesan"
            android:layout_width="115dp"
            android:layout_height="40dp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="65dp"
            android:hint="PEMESAN">
        </EditText>

        <EditText
            android:id="@+id/et_barang"
            android:layout_width="115dp"
            android:layout_height="40dp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="50dp"
            android:hint="JUMLAH">
        </EditText>
    </LinearLayout>

    <EditText
        android:id="@+id/et_namabarang"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="130dp"
        android:hint="NAMA BARANG">
    </EditText>

    <Button
        android:id="@+id/btn_dengandata"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="10dp"
        android:text="PINDAH DENGAN DATA"></Button>
    <Button
        android:id="@+id/btn_callcenter"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="10dp"
        android:text="CALL CENTER"></Button>
    <Button
        android:id="@+id/btn_web"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="10dp"
        android:text="WEBSITE RESMI"></Button>
    <Button
        android:id="@+id/btn_ready"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="10dp"
        android:text="PRODUK READY"></Button>


</androidx.appcompat.widget.LinearLayoutCompat>